        INCLUDE "start.i"

        LI      R1,#1           ; Init R1
        JSRA    PRINT
        DC.B    'Hello ',0
        INC     R1
        JSRA    PRINT
        DC.B    'Jim!',10,0
        INC     R1
        JSRA    PRINT
        DC.B    'The big fat (and quite ugly) fox '
        DC.B    'falls over the lazy dog.',10
        DC.B    'Serves it right!',10,0
        INC     R1              ; R1 now contains 4
        HALT

        end



