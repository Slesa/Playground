<UserControl x:Class="Lucifer.Ics.Editor.View.ListUnitTypesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Resources="clr-namespace:Lucifer.Ics.Editor.Resources" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True" Style="{DynamicResource ListViewDockPanelSkin}">

        <!-- Buttons -->
        <StackPanel Style="{DynamicResource ListViewButtonStackSkin}">
            <Button Style="{DynamicResource ListViewButtonSkin}" Command="{Binding Path=NewCommand}"
                    Content="{x:Static Resources:Strings.AllUnitTypesView_New}" ToolTip="{x:Static Resources:Strings.AllUnitTypesView_New_ToolTip}" />
        </StackPanel>
    </DockPanel>
</UserControl>
