<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <!-- Das PMS-ItemsControl mit den Modulen -->
    <Style x:Key="PmsMenuStackPanelSkin" TargetType="ItemsControl">
        <Setter Property="Background" Value="{StaticResource PmsMenuBackground}" />
    </Style>

    <!-- Das Dockpanel, das den gesamten Dialog einnimmt -->
    <Style x:Key="PmsListViewDockPanelSkin" TargetType="DockPanel">
        <Setter Property="Background" Value="{StaticResource PmsModuleBackground}" />
    </Style>

    <Style x:Key="PmsEditDialogDockPanelSkin" TargetType="DockPanel" BasedOn="{StaticResource EditDialogDockPanelSkin}">
        <Setter Property="Background" Value="{StaticResource PmsModuleBackground}" />
    </Style>

</ResourceDictionary>