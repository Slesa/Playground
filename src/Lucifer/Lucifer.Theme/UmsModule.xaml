<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <!-- Das UMS-ItemsControl mit den Modulen -->
    <Style x:Key="UmsMenuStackPanelSkin" TargetType="ItemsControl">
        <Setter Property="Background" Value="{StaticResource UmsMenuBackground}" />
    </Style>

    <!-- Das Dockpanel, das den gesamten Dialog einnimmt -->
    <Style x:Key="UmsListViewDockPanelSkin" TargetType="DockPanel">
        <Setter Property="Background" Value="{StaticResource UmsModuleBackground}" />
    </Style>

    <Style x:Key="UmsEditDialogDockPanelSkin" TargetType="DockPanel" BasedOn="{StaticResource EditDialogDockPanelSkin}">
        <Setter Property="Background" Value="{StaticResource UmsModuleBackground}" />
    </Style>

</ResourceDictionary>