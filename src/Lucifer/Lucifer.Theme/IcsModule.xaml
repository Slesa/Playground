<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <!-- Das ICS-ItemsControl mit den Modulen -->
    <Style x:Key="IcsMenuStackPanelSkin" TargetType="ItemsControl">
        <Setter Property="Background" Value="{StaticResource IcsMenuBackground}" />
    </Style>

    <!-- Das Dockpanel, das den gesamten Dialog einnimmt -->
    <Style x:Key="IcsListViewDockPanelSkin" TargetType="DockPanel">
        <Setter Property="Background" Value="{StaticResource IcsModuleBackground}" />
    </Style>

    <Style x:Key="IcsEditDialogDockPanelSkin" TargetType="DockPanel" BasedOn="{StaticResource EditDialogDockPanelSkin}">
        <Setter Property="Background" Value="{StaticResource IcsModuleBackground}" />
    </Style>

</ResourceDictionary>