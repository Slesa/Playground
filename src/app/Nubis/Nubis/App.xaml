<Application x:Class="Nubis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Core="clr-namespace:Nubis.Core;assembly=Nubis.Core" 
             xmlns:local="clr-namespace:Nubis" 
             xmlns:Converters="clr-namespace:Nubis.Core.Converters;assembly=Nubis.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!--<ResourceDictionary Source="Resources/Themes/JetPack/JetPackTheme.xaml" />-->
                    <local:CastleBootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <Converters:BoolVisibilityInvertConverter x:Key="InverseBooleanToVisibilityConverter" />
            <Core:ImageSourceConverter x:Key="StringToImageSourceConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
