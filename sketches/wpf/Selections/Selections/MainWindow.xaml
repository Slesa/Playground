<Window x:Class="Selections.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:local="clr-namespace:Selections.Views"
        Title="MainWindow" Height="350" Width="525">
    <TabControl>
        <TabItem Header="Single">
            <local:SingleView />
        </TabItem>
        <TabItem Header="Tree">
            <local:TreeView />
        </TabItem>
        <TabItem Header="Multi">
            <local:MultiView />
        </TabItem>
        <TabItem Header="Surface">
            <local:SurfaceView />
        </TabItem>
    </TabControl>
</Window>
