<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MediaOwl"
             xmlns:localcore="clr-namespace:MediaOwl.Core"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
             x:Class="MediaOwl.App">
    <Application.Resources>
        <ResourceDictionary>
        	<ResourceDictionary.MergedDictionaries>
        		<ResourceDictionary Source="Resources/Themes/JetPack/JetPackTheme.xaml"/>
        		<!--<ResourceDictionary Source="Resources/Themes/Cosmopolitan/CosmopolitanTheme.xaml"/>-->
        	</ResourceDictionary.MergedDictionaries>
            <local:MediaOwlBootstrapper x:Key="bootstrapper" />
            <cal:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <localcore:BoolVisibilityInvertConverter x:Key="InverseBooleanToVisibilityConverter" />
            <localcore:ImageSourceConverter x:Key="StringToImageSourceConverter" />
            <localcore:FiveStarRatingConverter x:Key="FiveStarRatingConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
