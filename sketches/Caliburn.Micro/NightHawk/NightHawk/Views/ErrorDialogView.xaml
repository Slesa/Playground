<UserControl x:Class="NightHawk.Views.ErrorDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:NightHawk.Resources" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel x:Name="LayoutRoot" Margin="10">
        <Button x:Name="TryClose" Content="{x:Static res:AppStrings.OkButtonText}" Width="75" DockPanel.Dock="Bottom" HorizontalAlignment="Right" />
        <TextBlock x:Name="ErrorMessage" TextWrapping="Wrap" DockPanel.Dock="Top" Foreground="{StaticResource ControlForeGround}">
            <Run />
            <LineBreak />
            <Run />
        </TextBlock>
    </DockPanel>
</UserControl>
