<Window x:Class="BugTracker.View.QuestionView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Micro="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro" Height="350" Width="450" Title="{Binding Title}">
	<DockPanel LastChildFill="True">
		<ItemsControl HorizontalAlignment="Center" DockPanel.Dock="Bottom" ItemsSource="{Binding PossibleAnswers}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding}" Micro:Message.Attach="GiveAnswer($datacontext)" Margin="3 5" Width="75" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<TextBlock TextWrapping="Wrap" Text="{Binding Question}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" />
	</DockPanel>
</Window>