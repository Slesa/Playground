<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="TwitterReader.MainWindow"
	x:Name="Window"
	Title="MainWindow"
	Width="640" Height="480">
	<Window.Resources>
		<DataTemplate x:Key="itemTemplate">
			<StackPanel>
				<TextBlock FontSize="10" Text="{Binding XPath=pubDate}" />
				<TextBlock FontSize="14" Text="{Binding XPath=title}" Foreground="#FF0B1F8F" />
				<TextBlock FontSize="10" Text="{Binding XPath=description}"/>
                <TextBlock />
			</StackPanel>
		</DataTemplate>
	</Window.Resources>

	<Grid x:Name="LayoutRoot" DataContext="{Binding Source={StaticResource rssDs}}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Button x:Name="buttonRefresh" Content="Refresh" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="5,0,0,5" Click="OnRefresh" IsEnabled="False" />
		<TextBlock Text="{Binding XPath=/rss/channel/title}" Margin="5" Grid.Row="1" FontSize="16" Background="#FFFFc600" FontWeight="Bold" TextAlignment="Center"/>
		<ListBox ItemTemplate="{DynamicResource itemTemplate}" ItemsSource="{Binding XPath=/rss/channel/item}" Margin="5" Grid.Row="2">
        </ListBox>
        <TextBlock Grid.Row="3" x:Name="statusLine" />
	</Grid>
</Window>