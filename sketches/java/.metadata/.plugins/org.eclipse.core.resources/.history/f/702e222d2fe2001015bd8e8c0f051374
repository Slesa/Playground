package Main;

public class FizzBuzz {

	static INumberFormatter[] _numberFormatter;
	
	public FizzBuzz() {
	
		_numberFormatter = new INumberFormatter[4];
		_numberFormatter[0] = new Format_multiples_of_3_and_5();
		_numberFormatter[1] = new Format_multiples_of_3();
		_numberFormatter[2] = new Format_multiples_of_5();
		_numberFormatter[3] = new Format_any_number();
		
	}

	public String get_output(int number) {
		
		for(int i=0; i<_numberFormatter.length; i++) {
			if( _numberFormatter[i].can_handle(number))
				return _numberFormatter[i].handle(number);
		}
		
		return null;
	}
	
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		FizzBuzz _fizzBuzz = new FizzBuzz();
		int max = 10;
		for(int i=0; i<max; i++)
		{
			System.out.println( _fizzBuzz.get_output(i) );
		}
	}

}
