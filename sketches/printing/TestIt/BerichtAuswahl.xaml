<Window x:Class="TestIt.BerichtAuswahl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Berichts-Auswahl" Height="405" Width="440" WindowState="Normal" WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical" Margin="10" TextBlock.FontSize="12" TextBlock.FontFamily="Tahoma">
        <Label Content="dotnetpro Berichtsauswahl:"/>
        <ComboBox   Margin="0,5,0,5" Width="400" HorizontalAlignment="Left"
                    ItemsSource="{Binding AlleBerichte}" Height="25" 
                    SelectionChanged="SelectedReportChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Berichtname}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <ContentControl Height="230">
            <Grid Name="Filter"/>
        </ContentControl>
        <Button Click="Erzeugen" Height="30" Width="100" Content="Erzeugen" HorizontalAlignment="Right" 
                Margin="15"/>
    </StackPanel>
</Window>
