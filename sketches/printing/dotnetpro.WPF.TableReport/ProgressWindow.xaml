<Window x:Class="dotnetpro.WPF.TableReport.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#F2F2F2" Width="400" Height="90"
        Topmost="True" Loaded="Window_Loaded">
    <Border CornerRadius="5" Background="#F2F2F2" Width="350" Height="75">
        <StackPanel>
            <TextBlock Name="StatusText" Margin="2" TextAlignment="Center" Foreground="Black"/>
            <ProgressBar Name="Progress" Width="330" Height="25" Minimum="1" Maximum="1" Margin="3" />
        </StackPanel>
    </Border>
</Window>
