<UserControl x:Class="Caliburn.Micro.HelloWP7.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             d:DesignHeight="480"
             d:DesignWidth="480">

    <StackPanel Background="{StaticResource PhoneChromeBrush}">
        <TextBlock Style="{StaticResource PhoneTextLargeStyle}" >A message dialog</TextBlock>
        <TextBlock  Style="{StaticResource PhoneTextNormalStyle}" Name="Message" />
        <Button Name="TryClose"
                Content="ok" 
                Width="240"
                HorizontalAlignment="Left"
                />
    </StackPanel>

</UserControl>
